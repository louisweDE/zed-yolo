FROM louiswe/deepstream-zed:0.1

ENV DEBIAN_FRONTEND noninteractive

RUN git clone https://github.com/AlexeyAB/darknet
WORKDIR darknet
RUN sed -i 's/GPU=0/GPU=1/; s/CUDNN=0/CUDNN=1/; s/CUDNN_HALF=0/CUDNN_HALF=1/; s/OPENCV=0/OPENCV=1/; s/LIBSO=0/LIBSO=1/; s/ZED_CAMERA=0/ZED_CAMERA=1/' Makefile
RUN wget https://github.com/AlexeyAB/darknet/releases/download/darknet_yolo_v4_pre/yolov4-tiny.weights

RUN apt update && apt install -y build-essential

RUN make